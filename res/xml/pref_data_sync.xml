<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="180"
        android:entries="@array/usertype_titles"
        android:entryValues="@array/usertype_values"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Typ" />
    <ListPreference android:key="mensa" android:entries="@array/mensa_titles" android:entryValues="@array/mensa_values" android:title="Mensa"/>
    <ListPreference android:title="Tag" android:key="date" android:entryValues="@array/date_values" android:entries="@array/date_titles"/>

</PreferenceScreen>